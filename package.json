{
  "name": "remove-tabs-on-save",
  "displayName": "Remove Tabs On Save",
  "description": "Convert all tabs to spaces on save, no more - no less.",
  "publisher": "redlin",
  "version": "1.2.3",
  "license": "GPL-3.0-or-later",
  "engines": {
    "vscode": "^1.46.0"
  },
  "keywords": [
    "remove",
    "tabs",
    "save",
    "tabSize",
    "convert"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Remove Tabs On Save",
      "properties": {
        "remove-tabs-on-save.ignoreMakefiles": {
          "type": "boolean",
          "default": true,
          "description": "Ignore Makefiles (recommended)."
        },
        "remove-tabs-on-save.ignoreFileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "first-time",
            "*.go"
          ],
          "description": "Ignore files with this extension (ie. *.css, *.html, *.cpp, *.go)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "glob": "^7.1.6",
    "mocha": "^9.1.3",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patchon/remove-tabs-on-save"
  },
  "homepage": "https://www.redlin.se"
}
